# Hyperliquid Configuration
HYPERLIQUID_PRIVATE_KEY=your_hyperliquid_private_key_here  # Your Hyperliquid private key
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz           # Mainnet API URL
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws           # WebSocket URL
HYPERLIQUID_TESTNET=false                                 # Set to true for testnet
HYPERLIQUID_MAX_LEVERAGE=10.0                             # Maximum allowed leverage
HYPERLIQUID_DEFAULT_SLIPPAGE=0.005                        # 0.5% default slippage

# Trading Configuration
INITIAL_BALANCE=10000          # Initial balance in USDT
DEFAULT_SYMBOLS="BTC,ETH,SOL"  # Default trading pairs (Hyperliquid format)
TRADING_INTERVAL="1h"          # Default trading interval (1h, 4h, 1d, etc.)

# Risk Management
MAX_POSITION_SIZE_PCT=0.1      # 10% of portfolio
MAX_RISK_PER_TRADE_PCT=0.02    # 2% risk per trade
DAILY_LOSS_LIMIT_PCT=0.05      # 5% daily loss limit

# Order Parameters
MIN_ORDER_SIZE=10.0            # $10 minimum order size
MAX_ORDER_SIZE=100000.0        # $100k maximum order size

# Together.AI Configuration (for sentiment analysis)
TOGETHER_AI_API_KEY=your_together_ai_key_here  # From https://api.together.xyz/settings/api-keys
AI_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1  # Default AI model
TEMPERATURE=0.7                # Model temperature (0.0 to 1.0)
MAX_TOKENS=1000                # Maximum tokens to generate

# Logging & Monitoring
LOG_LEVEL=INFO                 # Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_FILE=hyperliquid_bot.log   # Log file path
ENABLE_TELEMETRY=true          # Enable/disable telemetry data collection